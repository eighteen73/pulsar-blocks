{
	"name": "pulsar-blocks",
	"scripts": {
    "postinstall": "composer install -o",
		"start": "wp-scripts start --experimental-modules",
		"build": "wp-scripts build --experimental-modules",
    "check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
    "format": "npm run format:css && npm run format:js && format:php",
		"format:css": "stylelint --fix './src/**/*.scss'",
		"format:js": "eslint --fix './src/**/*.js'",
		"format:php": "composer run format",
		"lint": "npm run lint:css && npm run lint:js && npm run lint:php",
		"lint:css": "stylelint './src/**/*.scss'",
		"lint:js": "eslint './src/**/*.js'",
		"lint:php": "composer run lint",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
    "pot": "wp i18n make-pot . languages/pulsar-blocks.pot --domain=pulsar-blocks --exclude=node_modules,vendor,.git"
	},
	"devDependencies": {
		"@10up/block-components": "^1.21.4",
		"@eighteen73/eslint-config-wordpress": "^1.0.3",
		"@eighteen73/stylelint-config-wordpress": "^1.1.2",
		"@humanmade/block-editor-components": "^0.10.0",
		"@wordpress/browserslist-config": "^6.22.0",
		"@wordpress/prettier-config": "^4.22.0",
		"@wordpress/scripts": "^30.15.0",
		"postcss-preset-env": "^9.0.0",
		"webpack-merge": "^5.10.0"
	},
	"dependencies": {
		"@splidejs/react-splide": "^0.7.12",
		"@splidejs/splide": "^4.1.4",
		"@wordpress/icons": "^10.22.0",
		"clsx": "^2.1.1",
		"embla-carousel": "^8.6.0",
		"embla-carousel-auto-scroll": "^8.6.0",
		"embla-carousel-autoplay": "^8.6.0",
		"embla-carousel-class-names": "^8.6.0",
		"embla-carousel-fade": "^8.6.0",
		"embla-carousel-react": "^8.6.0",
		"focus-trap": "^7.6.4",
		"lightgallery": "^2.8.2",
		"nanoid": "^5.1.5"
	},
	"files": [
		"assets",
		"build",
		"autoload.php",
		"pulsar-blocks.php"
	]
}
