{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pulsar/filters",
  "description": "Display filters for post type listings.",
  "version": "1.0.0",
  "title": "Filters",
  "category": "widgets",
  "icon": "filter",
  "allowedBlocks": [
    "pulsar/filter-facetwp"
  ],
  "supports": {
    "html": false,
    "reusable": false,
    "inserter": true,
    "lock": true,
    "multiple": false,
    "align": true,
    "spacing": {
      "margin": true
    }
  },
  "attributes": {
    "id": {
      "type": "string"
    },
    "layout": {
      "type": "string",
      "default": "slide-out"
    }
  },
  "providesContext": {
    "id": "id",
    "layout": "layout"
  },
  "textdomain": "pulsar",
  "editorScript": "file:./index.js",
  "viewScriptModule": "file:./view.js",
  "render": "file:./render.php",
  "style": "file:./style-index.css"
}