{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pulsar/icon-text",
  "version": "0.1.0",
  "title": "Icon and Text",
  "description": "Sets an icon and text side by side or stacked with an optional link.",
  "category": "media",
  "icon": "lightbulb",
  "attributes": {
    "orientation": {
      "type": "string",
      "default": "vertical"
    },
    "mediaId": {
      "type": "number"
    },
    "mediaType": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "opensInNewTab": {
      "type": "boolean",
      "default": false
    },
    "iconColor": {
      "type": "string"
    },
    "iconBackgroundColor": {
      "type": "string"
    }
  },
  "allowedBlocks": [
    "core/heading",
    "core/paragraph"
  ],
  "supports": {
    "html": false
  },
  "textdomain": "pulsar-blocks",
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}